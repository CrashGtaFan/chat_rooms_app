<h2 class="ui center aligned icon header">
  <i class="orange circular beer icon"></i> Online chat with cup of beer
</h2>
<div class='ui two column grid'>
	<div class='twelve wide column'>
		<div class='ui fluid raised card chatbox'>
			<div class='content'>
				<div class="ui feed">
					<h4 class="ui header">Followers Activity</h4>
					<%= render @messages %>
				</div>
			</div>
			<div class='extra content'>
			  <%= form_for(@message, html: { class: 'ui reply form', role: 'form' }) do |f| %>
			    <div class='field'>
			      <div class="ui icon input">
			        <%= f.text_field :body, placeholder: 'Write something', required: true %>
			        <%= f.button '<i class="icon edit"></i>'.html_safe, class: "ui orange button" %>
            </div>
			    </div>
			  <% end %>
			</div>
		</div>
	</div>
	<div class='four wide column'>
		<div class='ui raised card chatbox'>
			<div class='content'>
				<div class="ui vertical menu"> <a class="active item">Home</a>
					<a class="item"> Messages</a>
					<a class="item">Friends</a>
				</div>
			</div>
		</div>
	</div>
</div>
