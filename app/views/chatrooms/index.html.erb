<h2 class="ui center aligned icon header">
  <i class="orange circular beer icon"></i> Online chat with cup of beer
</h2>
<div class='ui two column grid'>
	<div class='twelve wide column'>
		<div class='ui fluid raised card chatbox'>
			<div class='content'>
				<div class="ui feed">
					<h4 class="ui header">Followers Activity</h4>
					<%= render @messages %>
				</div>
			</div>
			<div class='extra content'>
			  <form class="ui reply form">
			    <div class='field'>
            <div class="ui icon input">
              <input type="text" placeholder="Search users...">
              <i class="bordered inverted orange icon edit"></i>
            </div>
          </div>
        </form>
			</div>
		</div>
	</div>
	<div class='four wide column'>
		<div class='ui raised card chatbox'>
			<div class='content'>
				<div class="ui vertical menu"> <a class="active item">Home</a>
					<a class="item"> Messages</a>
					<a class="item">Friends</a>
				</div>
			</div>
		</div>
	</div>
</div>
