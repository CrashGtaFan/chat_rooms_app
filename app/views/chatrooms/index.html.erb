<h2 class="ui center aligned icon header">
  <i class="orange circular beer icon"></i> Online chat with glass of beer
</h2>
<div class='ui stackable two column grid'>
	<div class='twelve wide column'>
		<div class='ui fluid raised card chatbox'>
			<div class='content' id='messages'>
			  <h4 class="ui header">Followers Activity</h4>
				<div class="ui feed" id='message-container'>
					<%= render @messages %>
				</div>
			</div>
			<div class='extra content message-form'>
			  <%= form_for(@message, html: { class: 'ui reply form', role: 'form' }, remote: true) do |f| %>
			    <div class='field'>
			      <div class="ui icon input">
			        <%= f.text_field :body, placeholder: 'Write something', id: 'message-field' %>
			        <%= f.button '<i class="icon edit"></i>'.html_safe, class: "ui orange button" %>
            </div>
			    </div>
			  <% end %>
			</div>
		</div>
	</div>
	<div class='four wide column'>
		<div class='ui raised card chatbox'>
			<div class='content'>
				<div class="ui vertical menu"> <a class="active item">All users</a>
				  <% User.all.each do |user| %>
					  <a class="item"><%= user.username %></a>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
